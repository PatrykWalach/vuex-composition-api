{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop":true,
    "noImplicitAny":true,
    "sourceMap": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
